  <!-- # # # # # # # # # # Display Skins # # # # # # # # # #-->
  <!-- ########## InfoBar TV ########## -->
  <screen name="InfoBarSummary" position="0,0" size="480,320">
    <panel name="TemplatesDisplayLayer" />
    <!--
  <widget source="session.CurrentService" render="Label" position="10,10" size="460,95" font="LCDTitles; 50" foregroundColor="LCDyellow" halign="center" valign="center" transparent="1">
    <convert type="ServiceName">Name</convert>
  </widget>
 -->
    <widget source="session.Event_Now" render="Label" position="10,130" size="460,100" font="LCDGlobal; 40" halign="center" valign="center" transparent="1">
      <convert type="EventName">Name</convert>
    </widget>
    <!-- Indication Layer -->
    <eLabel text="TXT" position="10,60" size="110,50" font="LCDIndication; 50" foregroundColor="LCDgray" backgroundColor="LCDbackground" transparent="1" halign="left" />
    <widget source="session.CurrentService" render="FixedLabel" text="TXT" position="10,60" size="110,50" font="LCDIndication; 50" foregroundColor="LCDcolor4" backgroundColor="LCDbackground" transparent="1" zPosition="3" halign="left">
      <convert type="ServiceInfo">HasTelext</convert>
      <convert type="ConditionalShowHide" />
    </widget>
    <eLabel text="REC" position="10,10" size="110,50" font="LCDIndication; 50" foregroundColor="LCDgray" backgroundColor="LCDbackground" transparent="1" halign="left" />
    <widget source="session.RecordState" render="FixedLabel" text="REC" position="10,10" size="110,50" font="LCDIndication; 50" foregroundColor="LCDred" backgroundColor="LCDbackground" transparent="1" zPosition="3" halign="left">
      <convert type="ConditionalShowHide">Blink</convert>
    </widget>
    <eLabel text="SD" position="390,60" size="80,50" font="LCDIndication; 50" foregroundColor="LCDgray" backgroundColor="LCDbackground" transparent="1" halign="right" />
    <widget source="session.CurrentService" render="FixedLabel" text="SD" position="390,60" size="80,50" font="LCDIndication; 50" foregroundColor="LCDcolor4" backgroundColor="LCDbackground" transparent="1" zPosition="3" halign="right">
      <convert type="ServiceInfo">VideoWidth</convert>
      <convert type="ValueRange">0,720</convert>
      <convert type="ConditionalShowHide" />
    </widget>
    <eLabel text="UHD" position="360,10" size="110,50" font="LCDIndication; 50" foregroundColor="LCDgray" backgroundColor="LCDbackground" transparent="1" halign="right" />
    <widget source="session.CurrentService" render="FixedLabel" text="HD" position="390,10" size="80,50" font="LCDIndication; 50" foregroundColor="LCDcolor4" backgroundColor="LCDbackground" transparent="1" zPosition="3" halign="right">
      <convert type="ServiceInfo">VideoWidth</convert>
      <convert type="ValueRange">721,1980</convert>
      <convert type="ConditionalShowHide" />
    </widget>
    <widget source="session.CurrentService" render="FixedLabel" text="UHD" position="360,10" size="110,50" font="LCDIndication; 50" foregroundColor="LCDcolor4" backgroundColor="LCDbackground" transparent="1" zPosition="3" halign="right">
      <convert type="ServiceInfo">VideoWidth</convert>
      <convert type="ValueRange">1981,3840</convert>
      <convert type="ConditionalShowHide" />
    </widget>
    <!-- Picon Layer -->
    <widget source="session.CurrentService" render="Picon" position="130,0" size="220,132" zPosition="2" alphatest="blend">
      <convert type="ServiceName">Reference</convert>
    </widget>
    <!-- Progress Layer -->
    <panel name="TemplatesDisplayProgressLayerImproved" />
    <widget source="session.Event_Now" render="Progress" position="5,240" size="470,20" foregroundColor="LCDaqua" transparent="1" zPosition="2">
